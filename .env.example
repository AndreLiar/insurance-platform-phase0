# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DB_SERVER=sql-insurance-hdi-andre789.database.windows.net
DB_NAME=insurance_hdi
DB_USER=sqladmin
DB_PASS=your-password-here
CONNECTION_STRING="Server=tcp:${DB_SERVER},1433;Database=${DB_NAME};User ID=${DB_USER};Password=${DB_PASS};Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;"

# Azure AD B2C Configuration
AZURE_B2C_INSTANCE=https://your-tenant-name.b2clogin.com
AZURE_B2C_TENANT_ID=your-tenant-id
AZURE_B2C_CLIENT_ID=your-client-id  
AZURE_B2C_CLIENT_SECRET=your-client-secret
AZURE_B2C_DOMAIN=your-tenant-name.onmicrosoft.com
AZURE_B2C_POLICY=B2C_1_SignUpSignIn
AZURE_B2C_AUTHORITY=https://your-tenant-name.b2clogin.com/your-tenant-name.onmicrosoft.com/B2C_1_SignUpSignIn/v2.0/

# Application Configuration
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=https://localhost:5001;http://localhost:5000

# Monitoring Configuration  
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123
PROMETHEUS_RETENTION=200h

